                                                            <h5 class="mb-0"> @item.Price EGP</h5>
                                                          
                                                        </div>
                                                        <div class="ms-3">
                                                            <a href="">  </a>
                                                           @* <p class="small mb-0">Sup Total <h5>@(item.Qty * item.Price)</h5></p>*@
                                                        </div>
                                                       
                                                        <a href="#!" style="color: red;"><i class="fas fa-trash-alt"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
